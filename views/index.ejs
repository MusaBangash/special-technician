  }
  .nav__links.open a { padding:14px 24px; font-size:.86rem; border-bottom:1px solid rgba(0,0,0,.04); }
  .hero__icon-wrap { width:220px; height:220px; }
  .services__grid { grid-template-columns:1fr; }
}
