/* Same CSS as before */
:root {
  --clr-bg:        #f7f6f3;
  --clr-surface:  #ffffff;
  --clr-text:     #1a1a1a;
  --clr-text-mid: #5a5a5a;
  --clr-text-lo:  #8c8c8c;
  --clr-accent:   #d4a017;
  --clr-accent2:  #2e7d32;
  --clr-accent3:  #c62828;
  --clr-dark:     #1e1e1e;
  --clr-wa:       #25d366;
  --shadow-sm:    0 2px 8px rgba(0,0,0,.06);
  --shadow-md:    0 6px 24px rgba(0,0,0,.10);
  --shadow-lg:    0 12px 40px rgba(0,0,0,.14);
  --radius:       14px;
  --radius-sm:    8px;
  --ff-primary:   'Outfit', sans-serif;
  --ff-arabic:    'Cairo', sans-serif;
  --transition:   .35s cubic-bezier(.4,0,.2,1);
}

/* Reset and base styles */
*, *::before, *::after { box-sizing:border-box; margin:0; padding:0; }
html { scroll-behavior:smooth; }
body {
  font-family: var(--ff-primary);
  background: var(--clr-bg);
  color: var(--clr-text);
  line-height: 1.6;
  overflow-x: hidden;
  -webkit-font-smoothing: antialiased;
}
a { text-decoration:none; color:inherit; }
img { max-width:100%; display:block; }
ul { list-style:none; }
button { font-family:inherit; border:none; cursor:pointer; }

/* Utility */
.container {
  width:100%; max-width:1140px;
  margin-inline:auto; padding-inline:24px;
}
.tag {
  display:inline-block;
  font-size:.7rem; font-weight:600; letter-spacing:.1em;
  text-transform:uppercase;
  color: var(--clr-accent);
  border:1.5px solid var(--clr-accent);
  border-radius:20px;
  padding:.3rem .82rem;
}
.btn {
  display:inline-flex; align-items:center; justify-content:center; gap:8px;
  font-size:.88rem; font-weight:600;
  padding:.72rem 1.6rem; border-radius:50px;
  background: var(--clr-dark); color:#fff;
  transition: transform var(--transition), box-shadow var(--transition), background var(--transition);
}
.btn:hover { transform:translateY(-2px); box-shadow: var(--shadow-md); }
.btn--accent { background: var(--clr-accent); color:#fff; }
.btn--outline {
  background:transparent; color: var(--clr-dark);
  border:1.8px solid var(--clr-dark);
}
.btn--outline:hover { background: var(--clr-dark); color:#fff; }

/* Nav */
.nav {
  position:sticky; top:0; z-index:100;
  background: rgba(247,246,243,.85);
  backdrop-filter:blur(14px);
  border-bottom:1px solid rgba(0,0,0,.06);
  transition: box-shadow var(--transition);
}
.nav.scrolled { box-shadow: var(--shadow-sm); }
.nav__inner {
  display:flex; align-items:center; justify-content:space-between;
  height:68px;
}
.nav__logo {
  display:flex; align-items:center; gap:10px;
}
.nav__logo-text {
  font-size:.92rem; font-weight:700;
  line-height:1.25; font-family: var(--ff-primary);
}
.nav__logo-text span {
  display:block; font-size:.6rem; font-weight:400;
  color: var(--clr-text-lo); letter-spacing:.03em;
  font-family: var(--ff-arabic);
}
.nav__links {
  display:flex; align-items:center; gap:28px;
}
.nav__links a {
  font-size:.82rem; font-weight:500; color: var(--clr-text-mid);
  position:relative; transition: color var(--transition);
}
.nav__links a::after {
  content:''; position:absolute; left:0; bottom:-4px;
  width:0; height:2px; background: var(--clr-accent);
  transition: width var(--transition);
}
.nav__links a:hover { color: var(--clr-text); }
.nav__links a:hover::after { width:100%; }
.nav__burger { display:none; flex-direction:column; gap:5px; padding:6px; }
.nav__burger span {
  width:24px; height:2px; background: var(--clr-text);
  border-radius:2px; transition:.3s;
}

/* Stripe */
.stripe-bar { height:5px; display:flex; }
.stripe-bar div { flex:1; }
.stripe-bar div:nth-child(1){ background: var(--clr-accent); }
.stripe-bar div:nth-child(2){ background: var(--clr-accent2); }
.stripe-bar div:nth-child(3){ background: var(--clr-accent3); }
.stripe-bar div:nth-child(4){ background: var(--clr-dark); }

/* Hero */
.hero {
  min-height:92vh;
  display:flex; align-items:center;
  position:relative; overflow:hidden;
  background: var(--clr-surface);
}
.hero::before {
  content:''; position:absolute; inset:0;
  background-image:url("data:image/svg+xml,%3Csvg viewBox='0 0 256 256' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='n'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='4'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23n)' opacity='.03'/%3E%3C/svg%3E");
  pointer-events:none; z-index:0;
}
.hero__inner {
  position:relative; z-index:1;
  display:grid; grid-template-columns:1fr 1fr; gap:48px;
  align-items:center; width:100%; max-width:1140px;
  margin-inline:auto; padding-inline:24px;
  padding-block:80px 100px;
}
.hero__content { text-align:left; }
.hero__badge { margin-bottom:24px; }
.hero__title {
  font-size:clamp(2rem, 5.5vw, 3.4rem);
  font-weight:800; line-height:1.18;
  color: var(--clr-dark);
  margin-bottom:20px;
  font-family: var(--ff-primary);
}
.hero__title .highlight { color: var(--clr-accent); }
.hero__desc {
  font-size:.97rem; color: var(--clr-text-mid);
  max-width:440px;
  margin-bottom:36px; line-height:1.85;
}
.hero__actions { display:flex; gap:14px; justify-content:flex-start; flex-wrap:wrap; }

/* Visual */
.hero__visual {
  display:flex; align-items:center; justify-content:center;
  position:relative;
}
.hero__icon-wrap {
  width:min(340px, 80vw); height:min(340px, 80vw);
  border-radius:50%;
  background: linear-gradient(135deg, #f0ece4 0%, #e8e2d6 100%);
  display:flex; align-items:center; justify-content:center;
  position:relative;
  box-shadow: var(--shadow-lg);
  animation: float 6s ease-in-out infinite;
}
@keyframes float {
  0%,100%{ transform:translateY(0); }
  50%     { transform:translateY(-14px); }
}
.hero__icon-wrap svg { width:55%; height:55%; }

/* Services */
.services { padding:100px 0 80px; }
.services__head { text-align:left; margin-bottom:56px; }
.services__head h2 {
  font-size:clamp(1.6rem,3.5vw,2.4rem); font-weight:800;
  margin-top:14px; font-family: var(--ff-primary);
}
.services__head p {
  color: var(--clr-text-mid); font-size:.92rem;
  margin-top:10px; max-width:440px; line-height:1.75;
}

.services__tabs {
  display:flex; gap:10px; justify-content:center;
  flex-wrap:wrap; margin-bottom:44px;
}
.services__tab {
  font-size:.78rem; font-weight:600;
  padding:.42rem 1rem; border-radius:20px;
  background:#fff; color: var(--clr-text-mid);
  border:1.5px solid rgba(0,0,0,.08);
  transition: all var(--transition);
}
.services__tab:hover,
.services__tab.active {
  background: var(--clr-dark); color:#fff; border-color: var(--clr-dark);
}

.services__grid {
  display:grid;
  grid-template-columns:repeat(auto-fill, minmax(250px,1fr));
  gap:20px;
}
.service-card {
  background: var(--clr-surface);
  border-radius: var(--radius);
  padding:28px 24px;
  box-shadow: var(--shadow-sm);
  border:1px solid rgba(0,0,0,.05);
  transition: transform var(--transition), box-shadow var(--transition);
  position:relative; overflow:hidden;
}
.service-card::before {
  content:''; position:absolute;
  top:-40px; right:-40px;
  width:120px; height:120px; border-radius:50%;
  background: var(--clr-accent); opacity:.06;
}
.service-card:hover { transform:translateY(-4px); box-shadow: var(--shadow-md); }
.service-card__icon {
  width:44px; height:44px; border-radius:12px;
  background: linear-gradient(135deg, var(--clr-accent), #f0c84a);
  display:flex; align-items:center; justify-content:center;
  margin-bottom:16px;
}
.service-card__icon svg { width:22px; height:22px; }
.service-card h3 { font-size:.9rem; font-weight:700; margin-bottom:6px; }
.service-card p { font-size:.77rem; color: var(--clr-text-lo); margin-bottom:14px; line-height:1.65; }
.service-card__price {
  display:flex; align-items:baseline; gap:4px;
  justify-content:flex-end;
}
.service-card__price .amount {
  font-size:1.3rem; font-weight:800; color: var(--clr-dark);
  font-family: var(--ff-primary);
}
.service-card__price .currency { font-size:.72rem; color: var(--clr-text-lo); }

.services__hidden-note {
  margin-top:32px; text-align:center;
  font-size:.74rem; color: var(--clr-text-lo); font-style:italic;
}

/* Why Us */
.why { padding:80px 0; background: var(--clr-surface); }
.why__inner {
  display:grid; grid-template-columns:1fr 1fr; gap:60px;
  align-items:center;
}
.why__content { text-align:left; }
.why__content h2 {
  font-size:clamp(1.5rem,3vw,2.1rem); font-weight:800;
  margin-top:14px; margin-bottom:20px;
  font-family: var(--ff-primary);
}
.why__list { display:flex; flex-direction:column; gap:18px; }
.why__item { display:flex; gap:14px; align-items:flex-start; }
.why__item-icon {
  flex-shrink:0; width:38px; height:38px;
  border-radius:10px; background: linear-gradient(135deg,#fff8e1,#fff3c4);
  display:flex; align-items:center; justify-content:center;
}
.why__item-icon svg { width:18px; height:18px; }
.why__item h4 { font-size:.84rem; font-weight:700; }
.why__item p { font-size:.75rem; color: var(--clr-text-lo); margin-top:2px; line-height:1.6; }

.why__visual {
  display:flex; align-items:center; justify-content:center;
}
.why__stats {
  display:grid; grid-template-columns:1fr 1fr; gap:16px;
  width:100%; max-width:340px;
}
.why__stat {
  background: var(--clr-bg);
  border-radius: var(--radius); padding:28px 20px;
  text-align:center;
  border:1px solid rgba(0,0,0,.05);
}
.why__stat .num {
  font-size:1.8rem; font-weight:800;
  font-family: var(--ff-primary);
  color: var(--clr-dark);
}
.why__stat .label {
  font-size:.68rem; color: var(--clr-text-lo);
  margin-top:4px; text-transform:uppercase; letter-spacing:.04em;
}
.why__stat:first-child { background: var(--clr-dark); color:#fff; }
.why__stat:first-child .num { color: var(--clr-accent); }
.why__stat:first-child .label { color:rgba(255,255,255,.5); }

/* Service Areas */
.areas { padding:80px 0; background: var(--clr-surface); }
.areas__inner {
  display:grid; grid-template-columns:1fr 2fr; gap:60px;
  align-items:center;
}
.areas__content { text-align:left; }
.areas__content h2 {
  font-size:clamp(1.5rem,3vw,2.1rem); font-weight:800;
  margin-top:14px; margin-bottom:20px;
  font-family: var(--ff-primary);
}
.areas__content p {
  color: var(--clr-text-mid); font-size:.9rem;
  max-width:400px; line-height:1.7;
}
.areas__map { position:relative; }
.areas__main { margin-bottom:40px; }
.areas__location {
  display:flex; gap:16px; align-items:center;
  background: var(--clr-bg); border-radius: var(--radius);
  padding:24px; box-shadow: var(--shadow-sm);
  border:1px solid rgba(0,0,0,.05);
  transition: transform var(--transition), box-shadow var(--transition);
}
.areas__location:hover { transform:translateY(-4px); box-shadow: var(--shadow-md); }
.areas__location--primary {
  background: linear-gradient(135deg, var(--clr-accent), #f0c84a);
  color:#fff;
}
.areas__location--primary .areas__details h3 { color:#fff; }
.areas__location--primary .areas__details p { color:rgba(255,255,255,.8); }
.areas__icon { font-size:2rem; }
.areas__details h3 { font-size:1.1rem; font-weight:700; margin-bottom:4px; }
.areas__details h5 { font-size:.95rem; font-weight:600; margin-bottom:2px; }
.areas__details p { font-size:.8rem; color: var(--clr-text-lo); margin:0; }
.areas__badge {
  display:inline-block; background:rgba(255,255,255,.2);
  color:#fff; font-size:.65rem; font-weight:600;
  padding:.2rem .6rem; border-radius:12px;
  margin-top:8px;
}
.areas__covered h4 {
  font-size:1rem; font-weight:700; margin-bottom:16px;
  color: var(--clr-text);
}
.areas__grid {
  display:grid; grid-template-columns:repeat(auto-fit, minmax(140px,1fr)); gap:16px;
}

/* Contact */
.contact { padding:100px 0; }
.contact__card {
  background: var(--clr-dark); border-radius:24px;
  padding:64px 48px; text-align:left;
  position:relative; overflow:hidden;
  color:#fff;
}
.contact__card::before {
  content:''; position:absolute;
  top:-80px; left:-80px;
  width:320px; height:320px; border-radius:50%;
  background: var(--clr-accent); opacity:.08;
}
.contact__card::after {
  content:''; position:absolute;
  bottom:-60px; right:-60px;
  width:220px; height:220px; border-radius:50%;
  background: var(--clr-accent2); opacity:.06;
}
.contact__card > * { position:relative; z-index:1; }
.contact__card h2 {
  font-size:clamp(1.5rem,3.2vw,2.2rem); font-weight:800;
  margin-bottom:10px; font-family: var(--ff-primary);
}
.contact__card p {
  color:rgba(255,255,255,.55); font-size:.9rem;
  max-width:480px; margin-bottom:32px; line-height:1.85;
}
.contact__row {
  display:flex; gap:14px; justify-content:flex-start; flex-wrap:wrap;
}
.btn--wa { background: var(--clr-wa); color:#fff; }
.btn--wa:hover { background:#1db954; }
.btn--light {
  background:rgba(255,255,255,.1); color:#fff;
  border:1.5px solid rgba(255,255,255,.2);
}
.btn--light:hover { background:rgba(255,255,255,.18); }

.contact__pills {
  display:flex; gap:24px; justify-content:flex-start;
  flex-wrap:wrap; margin-top:36px;
}
.contact__pill {
  display:flex; align-items:center; gap:8px;
  font-size:.75rem; color:rgba(255,255,255,.45);
}
.contact__pill svg { width:15px; height:15px; opacity:.6; }

.social-link { cursor:pointer; transition: opacity var(--transition); }
.social-link:hover { opacity:.8; }

/* Footer */
.footer {
  background: var(--clr-surface);
  border-top:1px solid rgba(0,0,0,.06);
  padding:44px 0 28px;
}
.footer__inner {
  display:flex; justify-content:space-between; align-items:center;
  flex-wrap:wrap; gap:16px;
}
.footer__brand { font-size:.78rem; font-weight:700; }
.footer__brand span { font-weight:400; color: var(--clr-text-lo); display:block; font-size:.67rem; margin-top:2px; font-family: var(--ff-arabic); }
.footer__links { display:flex; gap:20px; }
.footer__links a { font-size:.72rem; color: var(--clr-text-lo); transition: color var(--transition); }
.footer__links a:hover { color: var(--clr-text); }
.footer__copy { font-size:.66rem; color: var(--clr-text-lo); width:100%; text-align:center; margin-top:12px; }

/* WhatsApp FAB */
.wa-fab {
  position:fixed; bottom:28px; right:28px; z-index:200;
  width:58px; height:58px; border-radius:50%;
  background: var(--clr-wa);
  display:flex; align-items:center; justify-content:center;
  box-shadow: 0 4px 18px rgba(37,211,102,.4);
  transition: transform var(--transition), box-shadow var(--transition);
  animation: pulse-wa 2.4s infinite;
}
.wa-fab:hover { transform:scale(1.08); box-shadow: 0 6px 24px rgba(37,211,102,.55); }
.wa-fab svg { width:28px; height:28px; fill:#fff; }
@keyframes pulse-wa {
  0%,100%{ box-shadow: 0 4px 18px rgba(37,211,102,.4); }
  50%    { box-shadow: 0 4px 28px rgba(37,211,102,.55); }
}
.wa-fab::before {
  content:'Book Now'; position:absolute;
  right:68px; top:50%; transform:translateY(-50%);
  background: var(--clr-dark); color:#fff;
  font-size:.68rem; font-weight:600; white-space:nowrap;
  padding:.34rem .72rem; border-radius:8px;
  opacity:0; transition: opacity var(--transition);
  pointer-events:none; letter-spacing:.02em;
}
.wa-fab:hover::before { opacity:1; }

/* Auth Modal */
.auth-modal {
  position:fixed; inset:0; z-index:1000;
  background:rgba(0,0,0,.5); display:flex; align-items:center; justify-content:center;
  opacity:0; visibility:hidden; transition:opacity .3s, visibility .3s;
}
.auth-modal.show { opacity:1; visibility:visible; }
.auth-modal__content {
  background:#fff; border-radius: var(--radius); padding:32px;
  max-width:400px; width:90%; text-align:center;
}
.auth-modal h3 { margin-bottom:20px; }
.auth-modal input { width:100%; padding:12px; margin-bottom:16px; border:1px solid #ddd; border-radius:8px; }
.auth-modal .btn { width:100%; margin-bottom:10px; }

/* Mobile */
@media (max-width:860px){
  .hero__inner { grid-template-columns:1fr; text-align:center; }
  .hero__content { text-align:center; }
  .hero__desc { margin-inline:auto; }
  .hero__actions { justify-content:center; }
  .hero__visual { order:-1; }
  .why__inner { grid-template-columns:1fr; }
  .why__content { text-align:center; }
  .why__item { flex-direction:column; align-items:center; text-align:center; }
  .why__visual { order:-1; }
  .areas__inner { grid-template-columns:1fr; text-align:center; }
  .areas__content { text-align:center; }
  .areas__location { flex-direction:column; text-align:center; }
  .contact__card { padding:48px 28px; text-align:center; }
  .contact__card p { margin-inline:auto; }
  .contact__row { justify-content:center; }
  .contact__pills { justify-content:center; }
  .footer__inner { flex-direction:column; text-align:center; }
  .services__head { text-align:center; }
}
@media (max-width:600px){
  .nav__links { display:none; }
  .nav__burger { display:flex; }
  .nav__links.open {
    display:flex; flex-direction:column; gap:0;
    position:absolute; inset:68px 0 auto;
    background:var(--clr-surface);
